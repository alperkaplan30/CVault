    .profile-container
      h2 WELCOME!
      form(action='/logout' method= 'POST' class='logout-form')
        button.logout-button(type='submit') Logout
      form#profileForm(action='/submit-profile' method='post' enctype='multipart/form-data')
        label(for='fullname') Full Name
        input#fullname(type='text' name='fullname' placeholder='Enter your full name' required='')
        label(for='address') Address
        input#address(type='text' name='address' placeholder='Enter your address' required='')
        label(for='country') Country    
        input#country(type='text' name='country' placeholder='Enter your country' required='')
        label(for='gender') Gender
        select#gender(name='gender' required='')
          option(value='') Select Gender
          option(value='male') Male 
          option(value='female') Female
          option(value='not_specify') Not Specify
        label(for='email') Email
        input#email(type='email' name='email' placeholder='Enter your email address' required='')
        label(for='phone') Phone Number
        input#phone(type='text' name='phone' placeholder='Enter your phone number' required='')
        label(for='verifyPassword') Verify Password
        input#verifyPassword(type='password' name='verifyPassword' placeholder='Verify your password' required='')
        label(for='cv') CV (PDF only)
        input#cv(type='file' name='cv' accept='.pdf' required='')
        .wrap
          button.button(type='submit') Submit
      p#successMessage(style='display: none;') Form successfully submitted, you can close the tab!
      #notificationArea
    script(src='/profile.js')
